{
    "manifest_version": 2,

    "name": "clear-cookies",
    "description": "Clear cookies",
    "version": "1.0",

    "browser_action": {
        "default_icon": "icons/cookie.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "cookies",
        "tabs",
        "*://*/*"
    ]
}
